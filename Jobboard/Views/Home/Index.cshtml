<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <title>Job Board</title>
  </head>
  <body>
    @using Jobboard.Models;

    <h1>Job Board</h1>
    @if(Model.Count==0)
    {
      <p> Nothing on the job board </p>
    }
    @if(Model.Count!=0)
    {
      @foreach(JobOpening job in Model)
      {
        <br>
        <h3>Job Offer #@(Model.IndexOf(job)+1)</h3>
        <p>Title: @job.GetTitle()</p>
        <p>Description: @job.GetDescription()</p>
        <p>Contact: @job.GetContact()</p>
      }
    }

    <a href="/new">Add another job offering.</a>
  </body>
</html>
